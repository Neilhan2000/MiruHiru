<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom.item.StartCustomFragment">

    <TextView
        android:id="@+id/startNormalIntroduction"
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_border_log"
        android:gravity="bottom|center"
        android:padding="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="創造屬於自己的挑戰與朋友分享，或上傳社群讓世界各地的玩家一起參與。"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="338dp"
        android:layout_height="228dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/image_landscape"
        app:layout_constraintBottom_toTopOf="@+id/startCreateButton"
        app:layout_constraintEnd_toEndOf="@+id/startNormalIntroduction"
        app:layout_constraintStart_toStartOf="@+id/startNormalIntroduction"
        app:layout_constraintTop_toTopOf="@+id/startNormalIntroduction"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/startCreateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="開始創造"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startNormalIntroduction" />
</androidx.constraintlayout.widget.ConstraintLayout>